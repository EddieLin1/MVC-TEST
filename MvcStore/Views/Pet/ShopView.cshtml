@model IEnumerable<MvcStore.Models.Item>


@{
    ViewData["Title"] = "ShopView";
}

<h1>Items you could Buy!</h1>
 
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                <form asp-action="Create" asp-route-id= "@item.Id">
                    <input type="submit" value="Add To Cart" class="btn btn-primary" /> 
                </form>
            </td>
            
            
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to Cart</a>
</div>


